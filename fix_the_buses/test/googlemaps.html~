    <script type="text/javascript">
    var searchResults;
    var localSearch = new GlocalSearch();

    function findDetails(query) {
        document.getElementById('results').innerHTML='<ul>';
        var resName;
        localSearch.setCenterPoint("UK");
        localSearch.setSearchCompleteCallback(null,
            function() {
                searchResults = localSearch.results;
                for (var i=0; i<localSearch.results.length; i++){
                    document.getElementById('results').innerHTML+='<li><b>'+searchResults[i].titleNoFormatting + '</b><br>' + searchResults[i].streetAddress + ' <br> Lat: ' + searchResults[i].lat + ' Lng: ' + searchResults[i].lng+'<br>Closest stop: ?</li>';
                }
                document.getElementById('results').innerHTML+='</ul>';
            });
        localSearch.execute(query);
    }


    </script>
</head>
<body>
<form action="" onsubmit="findDetails(document.getElementById('query').value); return false">
<input type="text" name="query" id="query">
<input type="submit" >
</form>
<div id="results">

</div>
